{
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "claude-code-setup@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "context7@claude-plugins-official": true
  },
  "effortLevel": "medium",
  "model": "opus",
  "skipDangerousModePermissionPrompt": true,
  "permissions": {
    "deny": [
      "Bash(rm -rf *)",
      "Bash(git push --force*)",
      "Bash(sudo *)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.gnupg/**)",
      "Read(~/.env)"
    ]
  },
  "env": {
    {{- if eq .machine "work" }}
    "ANTHROPIC_BASE_URL": "https://llm-gateway.robinhood.com/anthropic",
    "CLAUDE_CODE_API_KEY_HELPER_TTL_MS": "3600000",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "CLAUDE_CODE_DISABLE_EXPERIMENTAL_BETAS": "true",
    "OTEL_METRICS_EXPORTER": "otlp",
    "OTEL_LOGS_EXPORTER": "otlp",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "http/protobuf",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "https://fe-otel.apollo.rhinternal.net/observability",
    "OTEL_METRIC_EXPORT_INTERVAL": "30000",
    "OTEL_LOGS_EXPORT_INTERVAL": "5000",
    "OTEL_METRICS_INCLUDE_SESSION_ID": "true",
    "OTEL_METRICS_INCLUDE_VERSION": "true",
    "OTEL_METRICS_INCLUDE_ACCOUNT_UUID": "true",
    "OTEL_LOG_USER_PROMPTS": "0",
    {{- end }}
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  {{- if eq .machine "work" }}
  "apiKeyHelper": "{{ .chezmoi.homeDir }}/.claude/scripts/token.sh",
  {{- end }}
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$TOOL_INPUT\" | grep -qE 'rm\\s+-(r|f|rf|fr)\\s'; then echo 'BLOCKED: Recursive/force delete not allowed. Use targeted rm instead.' >&2; exit 2; fi"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$TOOL_INPUT\" | grep -qE 'git\\s+push.*\\b(main|master)\\b'; then echo 'BLOCKED: Direct push to main/master. Use a feature branch.' >&2; exit 2; fi"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "FILE=$(echo \"$TOOL_INPUT\" | jq -r '.file_path // empty'); case \"$FILE\" in *.env|*.env.*|*credentials*|*secret*|*.pem|*.key) echo \"BLOCKED: Cannot edit sensitive file: $FILE\" >&2; exit 2;; */pnpm-lock.yaml|*/package-lock.json|*/yarn.lock|*/uv.lock) echo \"BLOCKED: Cannot edit lock file: $FILE\" >&2; exit 2;; esac"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "FILE=$(echo \"$TOOL_INPUT\" | jq -r '.file_path // empty'); case \"$FILE\" in *.env|*.env.*|*credentials*|*secret*|*.pem|*.key) echo \"BLOCKED: Cannot write sensitive file: $FILE\" >&2; exit 2;; */pnpm-lock.yaml|*/package-lock.json|*/yarn.lock|*/uv.lock) echo \"BLOCKED: Cannot write lock file: $FILE\" >&2; exit 2;; esac"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/scripts/hook-pre-tool.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/scripts/hook-post-tool.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Code needs your attention\" with title \"Claude Code\" sound name \"Funk\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/scripts/hook-stop.sh"
          }
        ]
      }
    ]
  }
}
